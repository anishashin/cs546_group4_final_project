<div class="col">
    <div class="card h-100">
        <div class="card-body">
            <blockquote class="blockquote">
                <p>{{this.text}}</p>
                {{#if authenticated}}
                    <footer class="blockquote-footer"><a href="/users/users/{{this.userId}}">{{this.userName}}</a></footer>
                {{else}}
                    <footer class="blockquote-footer"><a href="/users/{{this.userId}}">{{this.userName}}</a></footer>
                {{/if}}
            </blockquote>
        </div>
    </div>
</div>